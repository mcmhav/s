#!/usr/bin/env bash

if [ "$1" == "tail" ]; then
  tail -f "$HOME/.csys.bashrc.d/log/mac_ka.log"
  exit
fi

source param_parser --params "f t d" --incomming_params "$@"
SLEEP_TIME=30

if [ -n "$PARAM_F" ]; then
  GUARD_FROM="$PARAM_F"
fi
if [ -n "$PARAM_T" ]; then
  GUARD_TO="$PARAM_T"
fi
if [ -n "$PARAM_D" ]; then
  GUARD_D="$PARAM_D"
fi

while true; do
  if [ -z "$GUARD_FROM" ] ||
    [ -z "$GUARD_TO" ] ||
    [ -z "$GUARD_D" ] ||
    {
      [ "$(date +%H)" -ge "$GUARD_FROM" ] &&
        [ "$(date +%H)" -lt "$GUARD_TO" ] &&
        [[ "$GUARD_D" =~ $(date +%u) ]]
    }; then
    osascript -e 'tell application "System Events" to key code 57'
    loggit "Up"
  fi
  sleep $SLEEP_TIME
  if [ -f "$HOME/.csys.bashrc.d/mac_ka.env" ]; then
    source "$HOME/.csys.bashrc.d/mac_ka.env"
  fi
done

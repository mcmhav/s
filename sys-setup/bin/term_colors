#!/bin/bash

# https://en.wikipedia.org/wiki/ANSI_escape_code

COLOR_PREFIX="\033["
BLACK="${COLOR_PREFIX}0;30m"
RED="${COLOR_PREFIX}0;31m"
GREEN="${COLOR_PREFIX}0;32m"
ORANGE="${COLOR_PREFIX}0;33m"
BLUE="${COLOR_PREFIX}0;34m"
PURPLE="${COLOR_PREFIX}0;35m"
CYAN="${COLOR_PREFIX}0;36m"
LIGHT_GRAY="${COLOR_PREFIX}0;37m"

DARK_GRAY="${COLOR_PREFIX}1;30m"
LIGHT_RED="${COLOR_PREFIX}1;31m"
LIGHT_GREEN="${COLOR_PREFIX}1;32m"
YELLOW="${COLOR_PREFIX}1;33m"
LIGHT_BLUE="${COLOR_PREFIX}1;34m"
LIGHT_PURPLE="${COLOR_PREFIX}1;35m"
LIGHT_CYAN="${COLOR_PREFIX}1;36m"
WHITE="${COLOR_PREFIX}1;37m"

# Black        0;30     Dark Gray     1;30
# Red          0;31     Light Red     1;31
# Green        0;32     Light Green   1;32
# Brown/Orange 0;33     Yellow        1;33
# Blue         0;34     Light Blue    1;34
# Purple       0;35     Light Purple  1;35
# Cyan         0;36     Light Cyan    1;36
# Light Gray   0;37     White         1;37

NC='\033[0m'

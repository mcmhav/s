#!/usr/bin/env bash

HISTSIZE=10000
HISTFILESIZE=2000
export HISTFILE=~/.bash_eternal_ish_history

unset PROMPT_COMMAND

function timer_start {
  timer=${timer:-$SECONDS}
}

function timer_stop {
  timer_show=$((SECONDS - timer))

  if [ "$timer_show" -gt "900" ]; then
    notifyer "Done!!!"
    tput bel
  fi

  # arr=( "hore" "sau" "jesus" "abdullah" "bannan" "pottit" "SWAG!!" "YOLO!!" )
  # rand=$[ $RANDOM % ${#arr[@]} ]
  # timer_show=${arr[$rand]}

  unset timer
}

trap 'timer_start' DEBUG
PROMPT_COMMAND=timer_stop
export PS1='[\[\e[1;35m\]${timer_show}\[\e[0m\]][\[\e[1;32m\]\W\[\e[0m\]]\[\e[0;31m\]$\[\e[0m\] '

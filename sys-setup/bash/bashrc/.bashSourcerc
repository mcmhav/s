#!/bin/bash

bashWD="$CSYS_HOME/sys-setup/bash"

# adding extra sources
source "$bashWD"/bashrc/.bashHelperFuncsrc
source "$bashWD"/bashrc/.bashGitrc
source "$bashWD"/bashrc/.bashAliasesrc
source "$bashWD"/bashrc/.bashExportsrc
source "$bashWD"/bashrc/.bash."$CSYS_OS"rc

G_CLOUD_SDK_PATH="/usr/local/Caskroom/google-cloud-sdk/latest/google-cloud-sdk"
# The next line updates PATH for the Google Cloud SDK.
if [ -e "$G_CLOUD_SDK_PATH/path.bash.inc" ]; then
  source $G_CLOUD_SDK_PATH/path.bash.inc
fi
# The next line enables shell command completion for gcloud.
if [ -f $G_CLOUD_SDK_PATH/completion.bash.inc ]; then
  source $G_CLOUD_SDK_PATH/completion.bash.inc
fi

if [ -n "$BASH" ]; then
  source "$bashWD"/bashrc/.bashCommandrc

  source "$bashWD"/bashrc/.bashCompletionrc
fi

[ -e $HOME/.bashAkerrcs ] && source $HOME/.bashAkerrcs/.bashAkerrc
[ -e $HOME/.bashTErcs ] && source $HOME/.bashTErcs/.bashTErc

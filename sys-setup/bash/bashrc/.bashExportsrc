#!/bin/bash

# pyenv
export PYENV_ROOT="$HOME/.pyenv"

# go sgit
export GOPATH="$HOME/.go"

if [ "$PI_OS" == "$CSYS_OS" ]; then
	export GOROOT=/usr/lib/go
elif [ "$LIN_OS" == "$CSYS_OS" ]; then
	export GOROOT=/usr/local/opt/go/libexec
elif [ "$MAC_OS" == "$CSYS_OS" ]; then
	export GOROOT=/usr/local/opt/go/libexec
elif [ "$WIN_OS" == "$CSYS_OS" ]; then
	export GOROOT=/usr/local/opt/go/libexec
else
	export GOROOT=/usr/local/opt/go/libexec
fi

# android
export ANDROID_HOME=/usr/local/share/android-sdk

# path stuff
PATHS=(
	# "$HOME/.pyenv/shims"
	"/git/tools/bin"
	"$PATH"
	"/usr/local/bin"
	# "/usr/local/go/bin" # pi/linux-golang?? export PATH=$PATH:/usr/local/go/bin:$GOPATH/bin
	"$GOPATH/bin"
	"$GOROOT/bin"
	"/usr/local/opt/python/libexec/bin"
	"$PYENV_ROOT/bin"
	"$CSYS_HOME/sys-setup/bin"
	"$HOME/.poetry/bin"
)
PATH=$(printf '%s:' "${PATHS[@]%}" | sed 's/:$//')
if [ -n "$(command -v ruby)" ]; then
	PATH=$PATH:"$(ruby -r rubygems -e "puts Gem.user_dir")/bin"
fi
export PATH=$PATH

eval "$(nodenv init -)"

# gcloud currently needs python 2
export CLOUDSDK_PYTHON="$HOME/.pyenv/versions/2.7.16/bin/python"

# Pipenv
export PIPENV_YES="yes"

export WAKATIME_HOME="$HOME/.wakatime"

# Git
export XDG_CONFIG_HOME="$CSYS_HOME/sys-setup/.dotfiles"

export LANG='en_US.UTF-8'

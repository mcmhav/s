#!/usr/bin/env bash

SCRIPT_PATH="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd)"
SUB_WAWS_PATH="$SCRIPT_PATH/_waws"

_decode_message() {
  MESSAGE="$1"
  aws sts decode-authorization-message --encoded-message "$MESSAGE" | jq '.DecodedMessage' | jq -r | jq
}

case $1 in
decode-message)
  shift
  _decode_message "$1"
  ;;
select-profile)
  shift
  "$SUB_WAWS_PATH/_select_profile" "$@"
  ;;
sso-profiles)
  shift
  "$SUB_WAWS_PATH/_sso_profiles" "$@"
  ;;
eks)
  shift
  "$SUB_WAWS_PATH/_eks" "$@"
  ;;
ec2)
  shift
  "$SUB_WAWS_PATH/_ec2" "$@"
  ;;
sts)
  shift
  "$SUB_WAWS_PATH/_sts" "$@"
  ;;
whoami)
  "$SUB_WAWS_PATH/_sts" "whoami"
  ;;
secret)
  shift
  "$SUB_WAWS_PATH/_secret" "$@"
  ;;
costs)
  shift
  "$SUB_WAWS_PATH/_costs" "$@"
  ;;
ecr)
  shift
  "$SUB_WAWS_PATH/_ecr" "$@"
  ;;
*)
  loggit "Not supported"
  ;;
esac

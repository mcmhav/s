#!/usr/bin/env bash

SCRIPT_PATH="$(cd "$(dirname "${BASH_SOURCE[0]}")" >/dev/null 2>&1 && pwd)"
SUB_K8S_PATH="$SCRIPT_PATH/_k8s"

case $1 in
logs)
  shift
  "$SUB_K8S_PATH/_logs" "$@"
  ;;
logs-file)
  shift
  "$SUB_K8S_PATH/_logs-file" "$@"
  ;;
pods)
  shift
  "$SUB_K8S_PATH/_get" "pod"
  ;;
get)
  shift
  "$SUB_K8S_PATH/_get" "$@"
  ;;
nodes)
  shift
  "$SUB_K8S_PATH/_nodes" "$@"
  ;;
port-forward)
  shift
  "$SUB_K8S_PATH/_port-forward" "$@"
  ;;
describe)
  shift
  "$SUB_K8S_PATH/_describe" "$@"
  ;;
edit)
  shift
  "$SUB_K8S_PATH/_edit" "$@"
  ;;
*)
  loggit "Not supported"
  ;;
esac

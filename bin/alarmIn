#!/usr/bin/env bash

alarmIn() {
    SLEEP_TIME="$1"
    ALARM_MESSAGE="Done!!1"
    if [ ! -z "$2" ]; then
        ALARM_MESSAGE="$2"
    fi

    alarmInInternal() {
        sleep "$SLEEP_TIME"

        notifyer "$ALARM_MESSAGE"
    }

    while [ "$1" != "" ]; do
        case $1 in
        -s | --seconds)
            shift
            if test $# -gt 0; then
                SLEEP_TIME=$1
            else
                loggit "no seconds arg specified"
                exit 1
            fi
            ;;
        -m | --minutes)
            shift
            if test $# -gt 0; then
                SLEEP_TIME=$(($1 * 60))
            else
                loggit "no minutes arg specified"
                exit 1
            fi
            ;;
        -h | --hours)
            shift
            if test $# -gt 0; then
                SLEEP_TIME=$(($1 * 60 * 60))
            else
                loggit "no hours arg specified"
                exit 1
            fi
            ;;
        -msg | --message)
            shift
            if test $# -gt 0; then
                ALARM_MESSAGE="$1"
            else
                loggit "no minutes arg specified"
                exit 1
            fi
            ;;
        --help)
            echo "Usage: alarmIn [options]"
            echo "Options:"
            echo "-s, --seconds <seconds>    Set the alarm in seconds"
            echo "-m, --minutes <minutes>    Set the alarm in minutes"
            echo "-h, --hours <hours>        Set the alarm in hours"
            echo "-msg, --message <message>  Set the alarm message"
            echo "--help                     Show help"
            return
            ;;
        *)
            loggit "Time plz"
            ;;
        esac
        shift
    done

    alarmInInternal &
}

alarmIn "$@"

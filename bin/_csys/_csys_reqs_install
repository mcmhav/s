#!/usr/bin/env bash

REQS_FILE_PATH="$1"

REQS_COUNT=$(wc -l "$REQS_FILE_PATH" | awk '{print $1}')

loggit "Reqs to setup: $REQS_COUNT"

# TODO: issue with while-loop and brew install?
# while read -ra l; do
for l in $(cat $REQS_FILE_PATH); do
  loggit dbug "Installing reqs: $l"
  csys install "${l[@]}"
done
# done <"$REQS_FILE_PATH"

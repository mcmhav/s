#!/usr/bin/env bash

AWS_PROFILE_LOCATION="$HOME/.aws/config"

_select_profile() {
  PRE_SELECTOR="$1"
  SELECTED_PROFILE=$(grep "\[" <"$AWS_PROFILE_LOCATION" | sed 's|\[||g' | sed 's|profile ||g' | sed 's|\]||g' | grep "$PRE_SELECTOR" | fzf)
  echo "export AWS_PROFILE=$SELECTED_PROFILE"
}

_select_profile "$1"

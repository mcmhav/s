#!/usr/bin/env bash

_find_files() {
  search_location="."

  ag_fzf_result=$(cd "$search_location" && ag --unrestricted --hidden --ignore ".git" "." -f -g "" | fzf -e)

  selected_file="$search_location/$ag_fzf_result"
  if [ -n "$selected_file" ] && [ "$selected_file" != "./" ]; then
    vim "$selected_file"
    echo "$selected_file"
  fi
}

_find_files "$@"

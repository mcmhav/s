{
  "vim_mode": true,
  "autosave": "on_focus_change",
  "auto_update": false,
  "format_on_save": "off",
  "line_numbers": true,
  "ui_font_size": 14,
  "buffer_font_size": 13,
  "buffer_font_family": "Menlo",
  "buffer_font_weight": 500,
  "ui_font_weight": 600,
  "soft_wrap": "editor_width",
  "upload_binary_over_ssh":true,
  "tab_bar": {
    "show": false,
  },
  "terminal": {
    "font_family": "Menlo",
    "line_height": {
      // 618 / 4 (https://zed.dev/docs/configuring-zed#terminal-line-height)
      "custom": 1.1545,
    },
    "shell": {
      "with_arguments": {
        "program": "/bin/bash",
        "args": [],
      }
    },
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ayu Dark",
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
  "project_panel": {
    "default_width": 240,
    "indent_size": 10,
    "indent_guides": {
      "show": "never"
    },
  },
  "git": {
    "inline_blame": {
      "enabled": false,
    }
  },
}

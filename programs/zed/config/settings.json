{
  "agent": {
    "model_parameters": [],
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5"
    }
  },
  "debugger": {
    "button": false
  },
  "git_panel": {
    "button": false
  },
  "status_bar": {
    "active_language_button": true,
    "cursor_position_button": true
  },
  "show_call_status_icon": false,
  "collaboration_panel": {
    "button": false
  },
  "use_smartcase_search": true,
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "experimental.theme_overrides": {
    "syntax": {
      "comment": {
        "font_style": "italic",
        "color": "#633333"
      },
      "comment.doc": {
        "font_style": "italic"
      }
    }
  },
  "ssh_connections": [
    {
      "host": "github.com-mcmhav",
      "projects": []
    },
    {
      "host": "coder.a-coder.main",
      "projects": [
        {
          "paths": ["/workspace"]
        }
      ],
      "port_forwards": [
        {
          "local_port": 8080,
          "remote_port": 8080
        },
        {
          "local_port": 8000,
          "remote_port": 8000
        },
        {
          "local_port": 8001,
          "remote_port": 8001
        },
        {
          "local_port": 8002,
          "remote_port": 8002
        },
        {
          "local_port": 8003,
          "remote_port": 8003
        },
        {
          "local_port": 8004,
          "remote_port": 8004
        }
      ]
    }
  ],
  "vim_mode": true,
  "autosave": "on_focus_change",
  "auto_update": false,
  "format_on_save": "on",
  "gutter": {
    "line_numbers": true
  },
  "ui_font_size": 13,
  "buffer_font_size": 12,
  "buffer_font_family": "Menlo",
  "buffer_font_weight": 500,
  "ui_font_weight": 600,
  "soft_wrap": "editor_width",
  "upload_binary_over_ssh": true,
  "tab_size": 2,
  "tab_bar": {
    "show": false
  },
  "terminal": {
    "font_family": "Menlo",
    "line_height": {
      // 618 / 4 (https://zed.dev/docs/configuring-zed#terminal-line-height)
      "custom": 1.1545
    },
    "shell": {
      "with_arguments": {
        "program": "/usr/bin/bash",
        "args": []
      }
    },
    "detect_venv": "off"
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ayu Dark"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "project_panel": {
    "default_width": 200,
    // "default_width": 10,
    "indent_size": 10,
    "indent_guides": {
      "show": "never"
    }
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "languages": {
    "YAML": {
      "tab_size": 2,
      "formatter": "language_server"
    },
    "Dockerfile": {
      "tab_size": 2
    }
  },
  "lsp": {
    "terraform-ls": {
      "initialization_options": {
        "experimentalFeatures": {
          "prefillRequiredFields": true
        }
      }
    }
  },
  "file_types": {
    "TOML": ["**/*.conf"],
    "YAML": ["**/*.yaml.j2"]
  }
}
